{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/jsx-one-expression-per-line": "off",
    "linebreak-style": 0,
    "react/prop-types": [
      "error",
      {
        "ignore": ["children"]
      }
    ]
  },
  "globals": {
    "describe": true,
    "context": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "sinon": true,
    "shallow": true,
    "mount": true,
    "expect": true
  }
}
