{
  "private": true,
  "name": "folio-monorepo",
  "version": "0.1.1",
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.jsx --fix packages scripts",
    "preset": "yarn lint",
    "test": "cross-env NODE_ENV=test mocha --opts mocha.opts",
    "test:watch": "cross-env NODE_ENV=test mocha --opts mocha.opts --watch --watch-extensions jsx",
    "precover": "rimraf coverage",
    "cover": "cross-env NODE_ENV=test nyc yarn run test",
    "report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "storybook": "cross-env NODE_ENV=storybook start-storybook -p 6006",
    "check-cover": "nyc check-coverage --lines 100 --branches 100 --statements 100 --functions 100",
    "gh-pages:clean": "rimraf _gh-pages",
    "gh-pages:build": "cross-env NODE_ENV=production build-storybook -c .storybook -o  _gh-pages",
    "gh-pages:publish": "gh-pages -d  _gh-pages",
    "gh-pages": "yarn gh-pages:clean && yarn gh-pages:build && yarn gh-pages:publish",
    "build": "node scripts/build",
    "release": "yarn run build && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jalal246/folio.git"
  },
  "author": "Jalal Maskoun jimmy002020@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jalal246/folio/issues"
  },
  "homepage": "https://github.com/jalal246/folio#readme",
  "keywords": [
    "@folio",
    "form-builder-api",
    "dynamic-forms"
  ],
  "peerDependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@storybook/addon-actions": "^4.1.1",
    "@storybook/addon-info": "^4.1.1",
    "@storybook/addon-knobs": "^4.1.1",
    "@storybook/addon-links": "^4.1.1",
    "@storybook/addon-options": "^4.1.1",
    "@storybook/addons": "^4.1.1",
    "@storybook/react": "^4.1.1",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
